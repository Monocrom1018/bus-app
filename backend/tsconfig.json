{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@admin-users/*": ["src/modules/admin-users/*"],
      "@auth/*": ["src/auth/*"],
      "@chatrooms/*": ["src/modules/chatrooms/*"],
      "@comments/*": ["src/modules/comments/*"],
      "@contacts/*": ["src/modules/contacts/*"],
      "@db/*": ["src/db/*"],
      "@decorators/*": ["src/common/decorators/*"],
      "@entities/*": ["src/common/entities/*"],
      "@environments": ["src/environments"],
      "@faqs/*": ["src/modules/faqs/*"],
      "@follows/*": ["src/modules/follows/*"],
      "@filters/*": ["src/common/filters/*"],
      "@files/*": ["src/modules/files/*"],
      "@guards/*": ["src/common/guards/*"],
      "@interfaces/*": ["src/common/interfaces/*"],
      "@images/*": ["src/modules/images/*"],
      "@items/*": ["src/items/*"],
      "@likes/*": ["src/modules/likes/*"],
      "@messages/*": ["src/modules/messages/*"],
      "@months/*": ["src/modules/months/*"],
      "@middlewares/*": ["src/common/middlewares/*"],
      "@notices/*": ["src/modules/notices/*"],
      "@objects/*": ["src/objects/*"],
      "@phone-certifications/*": ["src/phone-certifications/*"],
      "@reservations/*": ["src/modules/reservations/*"],
      "@reservations-users/*": ["src/reservations-users/*"],
      "@rooms/*": ["src/modules/rooms/*"],
      "@schedules/*": ["src/modules/schedules/*"],
      "@users-chatrooms/*": ["src/modules/users-chatrooms/*"],
      "@users/*": ["src/modules/users/*"],
      "@buses/*": ["src/modules/buses/*"],
      "@reviews/*": ["src/modules/reviews/*"],
    }
  }
}
