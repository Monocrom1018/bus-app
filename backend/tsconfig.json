{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@decorators/*": ["src/shared/decorators/*"],
      "@entities/*": ["src/shared/entities/*"],
      "@filters/*": ["src/shared/filters/*"],
      "@middlewares/*": ["src/shared/middlewares/*"],
      "@guards/*": ["src/shared/guards/*"],
      "@users/*": ["src/users/*"],
      "@adminUsers/*": ["src/adminUsers/*"],
      "@auth/*": ["src/auth/*"],
      "@comments/*": ["src/comments/*"],
      "@conatcts/*": ["src/contacts/*"],
      "@db/*": ["src/db/*"],
      "@faqs/*": ["src/faqs/*"],
      "@items/*": ["src/items/*"],
      "@images/*": ["src/images/*"],
      "@follows/*": ["src/follows/*"],
      "@likes/*": ["src/likes/*"],
      "@messages/*": ["src/messages/*"],
      "@notices/*": ["src/notices/*"],
      "@objects/*": ["src/objects/*"],
      "@phone-certifications/*": ["src/phone-certifications/*"],
      "@reservations/*": ["src/reservations/*"],
      "@reservations_users/*": ["src/reservations_users/*"],
      "@rooms/*": ["src/rooms/*"],
      "@months/*": ["src/months/*"],
      "@schedules/*": ["src/schedules/*"]
    }
  }
}
