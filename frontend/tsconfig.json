{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "@assets/": ["src/assets/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@hooks/*": ["src/common/hooks/*"],
      "@atoms": ["src/common/atoms/index"],
      "@api": ["src/common/api/index"],
      "@appsync": ["src/common/appsync/index"],
      "@graphql/*": ["src/graphql/*"],
      "@config": ["src/common/config/index"],
      "@routes": ["src/common/routes/index"],
      "@pages/*": ["src/pages/*"],
      "@js/*": ["src/js/*"],
      "@constants": ["src/common/constants/index"],
      "@store": ["src/common/store/index"],
      "@selectors": ["src/common/selectors/index"],
      "@interfaces": ["src/common/interfaces/index"],
      "crypto": ["node_modules/crypto-js"],
      "@components/*": ["src/components/*"],
      "@utils": ["src/common/utils/index"],
      "@utils/*": ["src/common/utils/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.{test|spec}.tsx"]
}
